<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ro.ppoo.banking.controller.TransferController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Transfer Money">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>

    <VBox spacing="5">
        <Label text="From Account:"/>
        <ComboBox fx:id="fromAccountCombo" prefWidth="300.0" promptText="Select source account"/>
    </VBox>

    <VBox spacing="5">
        <Label text="To (IBAN):"/>
        <TextField fx:id="destinationIbanField" promptText="RO99PPOO..." prefWidth="300.0"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Amount:"/>
        <TextField fx:id="amountField" promptText="0.00" prefWidth="300.0"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Payment Details:"/>
        <TextField fx:id="detailsField" promptText="e.g. Rent, Gift, Invoice..." prefWidth="300.0"/>
    </VBox>

    <Label fx:id="errorLabel" textFill="RED" visible="false"/>

    <Button text="Send Money" onAction="#handleTransfer"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
            prefWidth="150.0" defaultButton="true"/>

    <Button text="Cancel" onAction="#handleCancel" prefWidth="150.0"/>

</VBox>