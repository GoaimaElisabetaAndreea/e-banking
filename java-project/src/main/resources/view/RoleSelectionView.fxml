<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
      fx:controller="ro.ppoo.banking.controller.RoleSelectionController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to PPOO Bank">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Label text="Please select your user type:">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>

    <Button fx:id="adminButton" onAction="#handleAdminLogin" text="I am an Employee (Admin Portal)" prefWidth="200.0" prefHeight="40.0"/>

    <Button fx:id="clientButton" onAction="#handleClientLogin" text="I am a Client (Client Portal)" prefWidth="200.0" prefHeight="40.0"/>

    <VBox VBox.vgrow="ALWAYS" />

    <Button fx:id="exitButton" onAction="#handleSaveAndExit" text="Save and Exit" prefWidth="150.0" style="-fx-background-color: #f88;"/>

</VBox>