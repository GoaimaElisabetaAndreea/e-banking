<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ro.ppoo.banking.controller.TransactionsController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Transaction History">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="90.0"/>
            <TableColumn fx:id="detailsColumn" text="Details" prefWidth="180.0"/>
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="90.0"/>

            <TableColumn fx:id="senderNameColumn" text="Sender Name" prefWidth="120.0"/>
            <TableColumn fx:id="sourceColumn" text="From (IBAN)" prefWidth="160.0"/>

            <TableColumn fx:id="receiverNameColumn" text="Receiver Name" prefWidth="120.0"/>
            <TableColumn fx:id="destinationColumn" text="To (IBAN)" prefWidth="160.0"/>
        </columns>
        <placeholder>
            <Label text="No transactions found."/>
        </placeholder>
    </TableView>

    <Button text="Close" onAction="#handleClose" prefWidth="150.0"/>

</VBox>