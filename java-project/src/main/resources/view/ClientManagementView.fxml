<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
      fx:controller="ro.ppoo.banking.controller.admin.ClientManagementController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="Client Management">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <TableView fx:id="clientsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name"/>
            <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name"/>

            <TableColumn fx:id="cnpColumn" prefWidth="150.0" text="CNP"/>

            <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email"/>
            <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="manageAccountsButton" onAction="#handleManageAccounts" text="Manage Accounts"/>

        <Button text="Deposit/Withdraw" onAction="#handleCashOperations" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>

        <Button text="View Transactions" onAction="#handleViewHistory" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

        <Button text="Reveal CNP" onAction="#handleRevealCNP" style="-fx-background-color: #607D8B; -fx-text-fill: white;"/>
        <Button text="Reset Pass" onAction="#handleResetPassword" style="-fx-background-color: #9C27B0; -fx-text-fill: white;"/>
        <Button fx:id="editClientButton" onAction="#handleEditClient" text="Edit Selected"/>
        <Button fx:id="deleteClientButton" onAction="#handleDeleteClient" text="Delete Selected" style="-fx-background-color: #f88;"/>
    </HBox>

    <Button fx:id="backButton" onAction="#handleBack" text="Back to Dashboard" prefWidth="150.0"/>

</VBox>